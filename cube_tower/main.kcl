fn square = (length, center) => {
  l = length / 2
  x = center[0]
  y = center[1]
  p0 = [-l + x, -l + y]
  p1 = [-l + x,  l + y]
  p2 = [ l + x,  l + y]
  p3 = [ l + x, -l + y]
  return startSketchAt(p0)
    |> lineTo(p1, %)
    |> lineTo(p2, %)
    |> lineTo(p3, %)
    |> lineTo(p0, %)
    |> close(%)
}

fn cube = (length, center) => {
  return square(length, center)
    |> extrude(length, %)
}

width = 20
cube(width, [20, 0])

